<script>
  function sendMoney () {
  let num =prompt("Enter Phone No");
  let amount=prompt("Enter Amount");
  let transCost;
  if(amount>=0 && amount<500){
    transCost==0.00;
  }else if(amount>500 && amount<=10000){
    transCost= amount*0.01;
  }else{
    transCost==110;
  }
  let name=prompt("Enter Name");
  let pin=prompt("Enter Your M-PESA PIN");
  alert("Send: "+amount+"To: "+name+"PhoneNumber: "+num+"Transaction Cost: "+transCost);
  alert("Thank You for Using M-PESA Services");
  }
</script>
  
